OPTIONS = QUIT_ON_FAILURE
INCLUDES = $(HOLDIR)/examples/parsing/ ..

SRCL = lib tokens ast elab semanticPrimitives smallStep bigStep typeSystem altBigStep initialEnv
SRCU = Lib Tokens Ast Elab SemanticPrimitives SmallStep BigStep TypeSystem AltBigStep InitialEnv
LEMS = $(patsubst %,%.lem,$(SRCL))
GENS = $(patsubst %,%Script.sml,$(SRCU))

$(GENS): hol_lib.lem $(LEMS)
	lem -extra_level none -hol_lib hol_lib.lem $(patsubst %,-hol %,$(LEMS))

ifdef POLY
HOLHEAP = sem_heap
EXTRA_CLEANS = $(HOLHEAP) $(HOLHEAP).o

BARE_THYS = ../preamble $(HOLDIR)/examples/parsing/grammarLib
DEPS = $(patsubst %,%.uo,$(BARE_THYS))

$(HOLHEAP): $(DEPS)
	$(protect $(HOLDIR)/bin/buildheap) -o $(HOLHEAP) $(BARE_THYS) ASCIInumbersTheory
endif

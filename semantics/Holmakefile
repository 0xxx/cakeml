OPTIONS = QUIT_ON_FAILURE
INCLUDES = $(HOLDIR)/examples/parsing/ ..

ifdef POLY
HOLHEAP = sem_heap
EXTRA_CLEANS = $(HOLHEAP) $(HOLHEAP).o

BARE_THYS = ../preamble $(HOLDIR)/examples/parsing/grammarLib
DEPS = $(patsubst %,%.uo,$(BARE_THYS))

$(HOLHEAP): $(DEPS)
	$(protect $(HOLDIR)/bin/buildheap) -o $(HOLHEAP) $(BARE_THYS)
endif

OPTIONS = QUIT_ON_FAILURE
INCLUDES = $(HOLDIR)/examples/parsing/ .. ../lem_lib_stub

SRC = lib tokens ast elab semanticPrimitives smallStep bigStep typeSystem initialEnv
LEMS = $(patsubst %,%.lem,$(SRC))
GENS = $(patsubst %,%Script.sml,$(SRC))

$(GENS): $(LEMS)
	if [ -x lem ];\
	then lem -auxiliary_level none -hol $(LEMS);\
	else touch $(GENS); fi

ifdef POLY
HOLHEAP = sem_heap
EXTRA_CLEANS = $(HOLHEAP) $(HOLHEAP).o

BARE_THYS = ../preamble $(HOLDIR)/examples/parsing/grammarLib
DEPS = $(patsubst %,%.uo,$(BARE_THYS))

$(HOLHEAP): $(DEPS)
	$(protect $(HOLDIR)/bin/buildheap) -o $(HOLHEAP) $(BARE_THYS) ASCIInumbersTheory
endif

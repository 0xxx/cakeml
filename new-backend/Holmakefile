INCLUDES = .. ../bytecode ../compiler ../semantics/proofs ../targets ../inference/proofs
OPTIONS=QUIT_ON_FAILURE

ifdef POLY
HOLHEAP = heap
EXTRA_CLEANS = $(HOLHEAP) $(HOLHEAP).o

THYFILES = $(patsubst %Script.sml,%Theory.uo,$(wildcard *.sml))
TARGETS = $(patsubst %.sml,%.uo,$(THYFILES))
all: $(TARGETS) $(HOLHEAP)
.PHONY: all

BARE_THYS =  ../targets/asmTheory ../bytecode/bytecodeTheory ../bytecode/bytecodeTerminationTheory ../compiler/compilerTerminationTheory ../compiler/free_varsTheory ../semantics/proofs/evalPropsTheory ../inference/proofs/inferPropsTheory

DEPS = $(patsubst %,%.uo,$(BARE_THYS))

$(HOLHEAP): $(DEPS)
	$(protect $(HOLDIR)/bin/buildheap) -o $(HOLHEAP) $(BARE_THYS)
endif

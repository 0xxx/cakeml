INCLUDES = ../repl ../translator/repl
OPTIONS = QUIT_ON_FAILURE

ifdef POLY
HOLHEAP = heap
EXTRA_CLEANS = $(HOLHEAP) $(HOLHEAP).o

BARE_THYS = ../repl/repl_computeLib ../repl/repl_computeTheory ../translator/repl/replDecsTheory

DEPS = $(patsubst %,%.uo,$(BARE_THYS))

$(HOLHEAP): $(DEPS)
	$(protect $(HOLDIR)/bin/buildheap) -b ../repl/heap -o $(HOLHEAP) $(BARE_THYS)
endif

	    ../semantics/ElabTheory \
	    ../semantics/lexer_funTheory \
	    $(HOLDIR)/examples/unification/triangular/first-order/walkTheory

DEPS = $(patsubst %,%.uo,$(BARE_THYS))

$(HOLHEAP): $(DEPS)
	$(protect $(HOLDIR)/bin/buildheap) -b ../semantics/sem_heap -o $(HOLHEAP) $(BARE_THYS)
endif


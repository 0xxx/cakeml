INCLUDES = ../.. ../syntax-lib ../set-theory
OPTIONS = QUIT_ON_FAILURE

ifdef POLY
HOLHEAP = heap
PARENT_HOLHEAP = ../set-theory/heap
EXTRA_CLEANS = $(HOLHEAP) $(HOLHEAP).o


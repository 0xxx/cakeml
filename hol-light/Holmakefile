INCLUDES = ../translator ../semantics
OPTIONS = QUIT_ON_FAILURE

ifdef POLY
HOLHEAP = local-hol-heap
PARENT_HOLHEAP = ../translator/local-hol-heap
EXTRA_CLEANS = $(HOLHEAP) $(HOLHEAP).o

BARE_THYS = ../translator/Print_astTheory \
            ../translator/Print_astTerminationTheory
DEPS = $(patsubst %,%.uo,$(BARE_THYS))

$(HOLHEAP): $(DEPS)
	$(protect $(HOLDIR)/bin/buildheap) -b $(PARENT_HOLHEAP) -o $(HOLHEAP) $(BARE_THYS)
endif

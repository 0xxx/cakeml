INCLUDES = ../bytecode ../translator ../semantics $(HOLDIR)/examples/set-theory/hol_sets
OPTIONS = QUIT_ON_FAILURE

ifdef POLY
HOLHEAP = local-hol-heap
PARENT_HOLHEAP = ../translator/local-hol-heap
EXTRA_CLEANS = $(HOLHEAP) $(HOLHEAP).o

SEM_BARE_THYS = astTheory libTheory altBigStepTheory semanticPrimitivesTheory
TRANS_BARE_THYS = print_astTheory print_astTerminationTheory

BARE_THYS = $(patsubst %,../semantics/%,$(SEM_BARE_THYS)) $(patsubst %,../translator/%,$(TRANS_BARE_THYS)) $(HOLDIR)/examples/set-theory/hol_sets/cardinalTheory ../bytecode/miscTheory

DEPS = $(patsubst %,%.uo,$(BARE_THYS))

$(HOLHEAP): $(DEPS)
	$(protect $(HOLDIR)/bin/buildheap) -b $(PARENT_HOLHEAP) -o $(HOLHEAP) $(BARE_THYS)
endif

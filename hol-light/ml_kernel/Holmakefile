INCLUDES = ../.. ../../translator ../monadic
OPTIONS = QUIT_ON_FAILURE

ifdef POLY
HOLHEAP = heap
PARENT_HOLHEAP = ../monadic/heap
EXTRA_CLEANS = $(HOLHEAP) $(HOLHEAP).o


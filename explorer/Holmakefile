INCLUDES = pp

OPTIONS = QUIT_ON_FAILURE

ifdef POLY
pp.cgi : pp.o
	cc -o $@ $< -lpolymain -lpolyml

regression.cgi : regression.o
	cc -o $@ $< -lpolymain -lpolyml

buildPP.exe : buildPP.uo heap
	$(HOLMOSMLC) -o $@ $<

pp.o : buildPP.exe
	./$<

regression.o : buildPP.exe
	./$<

HOLHEAP = heap
PARENT_HOLHEAP = ../compiler/eval/heap
EXTRA_CLEANS = $(HOLHEAP) $(HOLHEAP).o
all: $(HOLHEAP)

DEPS = $(patsubst %,%.uo,$(BARE_THYS)) $(PARENT_HOLHEAP)

BARE_THYS = pp/allPP

$(HOLHEAP): $(DEPS)
	$(protect $(HOLDIR)/bin/buildheap) -b $(PARENT_HOLHEAP) -o $(HOLHEAP) $(BARE_THYS)
endif

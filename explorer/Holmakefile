INCLUDES = pp

OPTIONS = QUIT_ON_FAILURE

all: pp.cgi regression.cgi
.PHONY: all

ifdef POLY
HOLHEAP = heap
EXTRA_CLEANS = $(HOLHEAP) $(HOLHEAP).o

BARE_THYS = pp/allPP

DEPS = $(patsubst %,%.uo,$(BARE_THYS))

$(HOLHEAP): $(DEPS)
	$(protect $(HOLDIR)/bin/buildheap) -o $(HOLHEAP) $(BARE_THYS)

pp.cgi : pp.sml $(HOLHEAP)
	$(POLYC) -o $@ $<

regression.cgi : regression.sml $(HOLHEAP)
	$(POLYC) -o $@ $<
endif

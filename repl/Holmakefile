INCLUDES=.. ../semantics ../parsing ../inference ../compiler ../bytecode ../initial
OPTIONS = QUIT_ON_FAILURE

ifdef POLY
HOLHEAP = heap
EXTRA_CLEANS = $(HOLHEAP) $(HOLHEAP).o

SEM_BARE_THYS = astTheory \
	        elabTheory \
	        lexer_funTheory \
	        typeSystemTheory

BARE_THYS = $(patsubst %,../semantics/%,$(SEM_BARE_THYS)) ../parsing/cmlParseTheory ../inference/inferTheory ../compiler/compilerTerminationTheory ../bytecode/bytecodeEvalTheory ../initial/initialProgramTheory

DEPS = $(patsubst %,%.uo,$(BARE_THYS))

$(HOLHEAP): $(DEPS)
	$(protect $(HOLDIR)/bin/buildheap) -b ../semantics/sem_heap -o $(HOLHEAP) $(BARE_THYS)
endif


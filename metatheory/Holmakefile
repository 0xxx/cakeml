INCLUDES=.. ../semantics
OPTIONS = QUIT_ON_FAILURE

SEMI = lib tokens ast semanticPrimitives smallStep bigStep typeSystem
SRCL = bigSmallInvariants typeSoundInvariants
SRCU = BigSmallInvariants TypeSoundInvariants
LEMI = $(patsubst %,../semantics/%.lem,$(SEMI))
LEMS = $(patsubst %,%.lem,$(SRCL))
GENS = $(patsubst %,%Script.sml,$(SRCU))

$(GENS) : ../semantics/hol_lib.lem $(LEMI) $(LEMS)
	lem -extra_level none -hol_lib ../semantics/hol_lib.lem $(patsubst %,-i %,$(LEMI)) $(patsubst %,-hol %,$(LEMS))

ifdef POLY
HOLHEAP = meta_heap
EXTRA_CLEANS = $(HOLHEAP) $(HOLHEAP).o

PRE_BARE_THYS = AltBigStepTheory \
		AstTheory \
		BigStepTheory \
		LibTheory \
		SemanticPrimitivesTheory \
		SmallStepTheory \
		TokensTheory \
		TypeSystemTheory \
		terminationTheory \
		tokenUtilsTheory

BARE_THYS = $(patsubst %,../semantics/%,$(PRE_BARE_THYS))

DEPS = $(patsubst %,%.uo,$(BARE_THYS)) ../semantics/sem_heap

$(HOLHEAP): $(DEPS)
	$(protect $(HOLDIR)/bin/buildheap) -b ../semantics/sem_heap -o $(HOLHEAP) $(BARE_THYS)
endif


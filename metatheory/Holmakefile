INCLUDES=.. ../semantics ../lem_lib_stub
OPTIONS = QUIT_ON_FAILURE

SEMI = lib tokens ast semanticPrimitives smallStep bigStep typeSystem
SRC = bigSmallInvariants typeSoundInvariants
LEMI = $(patsubst %,../semantics/%.lem,$(SEMI))
LEMS = $(patsubst %,%.lem,$(SRC))
GENS = $(patsubst %,%Script.sml,$(SRC))

$(GENS) : $(LEMI) $(LEMS)
	if [ -x lem ];\
	then lem -auxiliary_level none $(patsubst %,-i %,$(LEMI)) $(patsubst %,-hol %,$(LEMS));\
	else touch $(GENS); fi

ifdef POLY
HOLHEAP = meta_heap
EXTRA_CLEANS = $(HOLHEAP) $(HOLHEAP).o

PRE_BARE_THYS = astTheory \
		bigStepTheory \
		libTheory \
		semanticPrimitivesTheory \
		smallStepTheory \
		tokensTheory \
		typeSystemTheory \
		terminationTheory \
		tokenUtilsTheory

BARE_THYS = $(patsubst %,../semantics/%,$(PRE_BARE_THYS))

DEPS = $(patsubst %,%.uo,$(BARE_THYS)) ../semantics/sem_heap

$(HOLHEAP): $(DEPS)
	$(protect $(HOLDIR)/bin/buildheap) -b ../semantics/sem_heap -o $(HOLHEAP) $(BARE_THYS)
endif

